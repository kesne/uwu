{
    "name": "@uwu/monorepo",
    "private": true,
    "workspaces": {
        "packages": [
            "packages/*"
        ],
        "nohoist": [
            "**/electron-builder",
            "**/electron-builder/**",
            "**/electron-webpack",
            "**/electron-webpack/**"
        ]
    },
    "scripts": {
        "start": "yarn workspace @uwu/backend start",
        "build": "yarn workspace @uwu/backend build && yarn workspace @uwu/frontend build",
        "heroku-postbuild": "yarn build && yarn workspace @uwu/backend migrate:prod"
    },
    "dependencies": {
        "typescript": "^3.7.3"
    },
    "engines": {
        "node": "12.x"
    }
}
